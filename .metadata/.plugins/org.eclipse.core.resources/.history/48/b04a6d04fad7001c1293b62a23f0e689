package com.constex;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Banking {

	public static void main(String[] args) throws IOException {
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));

		Account na = new Account("한찬규");
		String strWork;
		do {
			System.out.println("\n작업을 선택하세요.");
			System.out.println("==================");
			System.out.println("  입        금=========>1");
			System.out.println("  출        금=========>2");
			System.out.println("  잔 액 확 인=========>3");
			System.out.println("  종        료=========>0");
			System.out.println("==================");

			System.out.println("작업 내용을 선택하세요: ");
			strWork = br.readLine();

			int switchInt = 0;

			if (strWork != null) {
				switchInt = Integer.parseInt(strWork);
			} else {
				System.out.println("작업 내용을 다시 선택해주세요.");
				System.exit(0);
			}

			switch (switchInt) {
			case 1:

				break;
			case 2:

				break;
			case 3:

				break;
			case 0:

				break;
			default :
			}

		} while (!strWork.equals("0"));
	}

}
