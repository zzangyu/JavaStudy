package study;

/*
 * 증감 연산자(++/--)
 * 		하나씩 증가 시키거나, 감소 시키는 연산자
 */

public class OperEx01 {

	public static void main(String[] args) {
		
		// 전 대입 후 연산
		int x = 10;
		int y = x++; // 계산을 위해 y에 10이 들어간다. 그래서 y가 10이 나온다.
		System.out.println("x: "+x+" y :"+y);
		
		// 전 연산 후 대입
		int a = 10;
		int b = ++a;
		System.out.println("a: "+a+" b :"+b);
		
	}

}
